<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin tours</title>
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/adminlte/dist/css/adminlte.min.css">
</head>

<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
    <!--begin::App Wrapper-->
    <div class="app-wrapper">
        <!--begin::Header-->
        <nav class="app-header navbar navbar-expand bg-body" style="min-height: 50px;">
            <!--begin::Container-->
            <div class="container-fluid">
                <!--begin::Start Navbar Links-->

                <!--end::End Navbar Links-->
            </div>
            <!--end::Container-->
        </nav>


        <!--end::Header--> <!--begin::Sidebar-->
        <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
            <!--begin::Sidebar Brand-->
            <div class="sidebar-brand">
                <!--begin::Brand Link-->
                <a href="/blogs" class="brand-link">
                    <span class="brand-text fw-light">AdminLTE 4</span> <!--end::Brand Text-->
                </a>
                <!--end::Brand Link-->
            </div>
            <!--end::Sidebar Brand--> <!--begin::Sidebar Wrapper-->
            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <!--begin::Sidebar Menu-->
                    <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu"
                        data-accordion="false">
                        <li class="nav-item">
                            <a href="/blogs" class="nav-link">
                                <i class="nav-icon bi bi-speedometer"></i>
                                <p>
                                    blogs
                                    <i class="nav-arrow bi bi-chevron-right"></i>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/blogs/new" class="nav-link">
                                <i class="nav-icon bi bi-palette"></i>
                                <p>add blog</p>
                            </a>
                        </li>
                    </ul>


                    <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu"
                        data-accordion="false">
                        <li class="nav-item">
                            <a href="/tours" class="nav-link">
                                <i class="nav-icon bi bi-speedometer"></i>
                                <p>
                                    tours
                                    <i class="nav-arrow bi bi-chevron-right"></i>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/tours/new" class="nav-link">
                                <i class="nav-icon bi bi-palette"></i>
                                <p>add tour</p>
                            </a>
                        </li>
                    </ul>
                    <!--end::Sidebar Menu-->
                </nav>
            </div>
            <!--end::Sidebar Wrapper-->
        </aside>


        <!--end::Sidebar--> <!--begin::App Main-->
        <main class="app-main">
            <!--begin::App Content Header-->
            <div class="app-content-header">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="mb-0">Edit tour</h3>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Edit tour
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="app-content">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <div class="row g-4">
                        <!--begin::Col-->
                        <div class="col-md-6">
                            <!--begin::Quick Example-->
                            <div class="card card-primary card-outline mb-4">
                                <div class="card-header">
                                    <div class="card-title">Quick Example</div>
                                </div>
                                <!--end::Header--> <!--begin::Form-->

                                <form id="editTourForm" enctype="multipart/form-data">
                                    <div class="card-body">
                                        <% if (errors.length> 0) { %>
                                            <div class="alert alert-danger">
                                                <ul>
                                                    <% errors.forEach(function(error) { %>
                                                        <li>
                                                            <%= error %>
                                                        </li>
                                                        <% }) %>
                                                </ul>
                                            </div>
                                            <% } %>
                                                <div class="mb-3">
                                                    <div class="form-group">
                                                        <label for="name">Tour Name</label>
                                                        <input type="text" class="form-control" id="name" name="name"
                                                            required minlength="5" value="<%= tour.name %>">
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <div class="form-group">
                                                        <label for="desc">Description</label>
                                                        <textarea class="form-control" id="desc" name="desc" cols="4"
                                                            rows="6" required minlength="15"><%= tour.desc %></textarea>
                                                    </div>
                                                </div>





                                                <div class="mb-3">
                                                    <div class="form-group">
                                                        <label for="location">Tour Location</label>
                                                        <input type="text" class="form-control" id="location"
                                                            name="location" minlength="5" value="<%= tour.location %>">
                                                    </div>
                                                </div>
                                                <div class="mb-3">
                                                    <div class="form-group">
                                                        <label for="duration">Tour Duration</label>
                                                        <input type="text" class="form-control" id="duration"
                                                            name="duration" minlength="5" value="<%= tour.duration %>">
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <div class="form-group">
                                                        <label for="cover">tour Cover</label>
                                                        <input type="file" class="form-control-file" id="cover"
                                                            name="cover">
                                                        <img src="/<%= tour.cover %>" alt="tour Cover"
                                                            style="width: 150px; margin-top: 10px;">
                                                    </div>
                                                </div>
                                                <div class="mb-3">
                                                    <button type="submit" class="btn btn-primary">Update tour</button>
                                                </div>

                                    </div>
                                </form>
                                <!--end::Form-->
                            </div>
                        </div>
                        <!--end::Col--> <!--begin::Col-->
                    </div>
                    <!--end::Row-->
                </div>
                <!--end::Container-->
            </div>
            <!--end::App Content-->
        </main>


        <!--end::App Main--> <!--begin::Footer-->
        <footer class="app-footer">
            <div class="float-end d-none d-sm-inline">Anything you want</div>
            <strong>
                Copyright &copy; 2014-2024&nbsp;
                <a href="https://adminlte.io" class="text-decoration-none">AdminLTE.io</a>.
            </strong>
            All rights reserved.
        </footer>
    </div>
    <script src="/adminlte/dist/js/adminlte.min.js"></script>


    <script>
        document.getElementById("editTourForm").addEventListener("submit", async function (event) {
            event.preventDefault();  // Prevent the default form submission

            const form = document.getElementById("editTourForm");
            const formData = new FormData(form);
            const tourId = "<%= tour._id %>";

            try {
                const response = await fetch(`/tours/${tourId}`, {
                    method: 'PUT',
                    body: formData
                });

                if (response.ok) {
                    alert("tour updated successfully");
                    window.location.href = "/tours";  // Redirect to tours list
                } else {
                    const errorData = await response.json();
                    alert("Failed to update tour: " + errorData.join(", "));
                }
            } catch (error) {
                console.error("Error:", error);
                alert("An error occurred while updating the tour");
            }
        });
    </script>

</body>

</html>